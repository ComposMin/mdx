
(rule (
  (targets (promote_to_ml.html))
  (deps    (promote_to_ml.md))
  (action (
    run
    pandoc
    --section-divs
    -f
    markdown-smart-auto_identifiers
    -t
    html5
    ${<}
    -o
    ${@}))))

(alias
  ((name mdx)
  (deps (promote_to_ml.md
         promote_to_ml.ml))
  (action (progn
     (run mdx test promote_to_ml.md)
      (diff? promote_to_ml.md promote_to_ml.md.corrected)
      (diff? promote_to_ml.ml promote_to_ml.ml.corrected)))))

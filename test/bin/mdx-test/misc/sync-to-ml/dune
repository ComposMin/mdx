(rule
 (targets
   test_case.md.corrected
   test_case.ml.corrected
   broken.ml.corrected
   test_case.mli)
 (deps
  (package mdx)
  (:md sync_to_ml.md)
  test_case.ml
  broken.ml
  test_case.mli)
 (action
  (run ocaml-mdx test --force-output --direction=to-ml %{md})))

(alias
 (name runtest)
 (action (diff test-case.md.expected test-case.md.corrected)))

(alias
 (name runtest)
 (action (diff test_case.ml.expected test_case.ml.corrected)))

(alias
 (name runtest)
 (action (diff broken.ml.expected broken.ml.corrected)))

(alias
 (name runtest)
 (action (diff test_case.mli.expected test_case.mli.corrected)))

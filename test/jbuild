(rule
 ((targets (section.ml))
  (deps    (section.md))
  (action  (with-stdout-to ${@} (run ${exe:../bin/main.exe} pp ${<})))))

(executable ((name section)))

(alias
 ((name runtest)
  (deps (section.exe))
  (action (run ${<}))))
